<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:listDivider">@drawable/bg_divider</item>
    </style>

    <style name="BottomTabStyle">
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="width_wrap_height_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ItemTextStyle" parent="width_wrap_height_wrap">
        <item name="android:layout_margin">@dimen/spacing_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
    </style>

    <style name="ItemArrowStyle" parent="width_wrap_height_wrap">
        <item name="android:text">@string/icon_arrow</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="ItemSearchTitle" parent="width_wrap_height_wrap">
        <item name="android:layout_marginLeft">@dimen/spacing_normal</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal</item>
        <item name="android:layout_marginBottom">@dimen/spacing_normal</item>
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
    </style>

    <style name="ItemSearchAuthor" parent="width_wrap_height_wrap">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

</resources>
